{
  "name": "chat",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fisg4/ms-messages.git"
  },
  "homepage": "https://github.com/fisg4/ms-messages",
  "main": "dist/bin/www.js",
  "scripts": {
    "start": "cross-env npm-run-all build server",
    "develop": "nodemon",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist/bin/www",
    "dev": "cross-env NODE_ENV=dev npm-run-all build server",
    "clean": "rimraf dist",
    "transpile": "babel ./src --out-dir dist --copy-files",
    "lint": "eslint ./src",
    "test": "jest",
    "test-integration": "jest -c jest.integration.config.js",
    "test:watch": "jest --watch"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "axios": "^1.2.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^4.12.0",
    "mongoose": "^6.7.5",
    "morgan": "^1.9.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.6.0",
    "url-join": "4.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.9.0",
    "babel-plugin-inline-dotenv": "^1.5.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "v": "^0.3.0"
  }
}
